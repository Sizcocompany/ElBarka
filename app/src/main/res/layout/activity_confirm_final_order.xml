<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_write_your_shipment_details"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_margin="25dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/shapment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/txt"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/please_enter_your_full_name"
        />

    <EditText
        android:id="@+id/shapment_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/shapment_name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/please_enter_user_phone"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/shapment_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/shapment_phoneNumber"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/please_enter_your_address"
        />

    <EditText
        android:id="@+id/shapment_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/shapment_Address"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/please_enter_your_city"
        />

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="20dp"


        />


</RelativeLayout>