<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seller_product_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/seller_product_image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/seller_product_name_details"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/seller_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_product_image"
            android:text="@string/product_price"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/seller_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_product_price"
            android:text="@string/product_description"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>