<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Buyers.Home2Activity"
    tools:showIn="@layout/app_bar_main">
    <TextView
        android:id="@+id/user_category_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Choose from below Category"
        android:textSize="26sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/user_linner1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_category_txt"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/user_nutes_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/mkasarat"
            />
        <ImageView
            android:id="@+id/user_honey_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/assal"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_linner2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_linner1_category_layout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/user_baked_image"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:src="@drawable/moshtaqatelmaamol"
            />

        <ImageView
            android:id="@+id/user_olive_oil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/oil"
            />

        <ImageView
            android:id="@+id/user_dates_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/tomor"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_linner3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_linner2_category_layout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/user_yamiseh_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@drawable/yamish"
            />

        <ImageView
            android:id="@+id/user_coffee"
            android:layout_margin="5dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/coffee"
            />

    </LinearLayout>




